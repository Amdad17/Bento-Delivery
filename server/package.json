  },
  "homepage": "https://github.com/Project-Code-Projects/bento-delivery-server#readme",
  "dependencies": {
    "@turf/turf": "^6.5.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.15",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
